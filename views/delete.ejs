<% layout('layout') %>

<div class="mx-auto">
  <h5>Delete "<%= folder.name %>"</h5>

  <div class="alert alert-danger">
    <p>Are you sure you want to delete this folder?</p>
    <p>This action cannot be undone.</p>
  </div>
  <form action="/dashboard/folders/<%= folder.id %>/delete" method="post">
    <div class="d-flex">
      <a class="btn btn-secondary" href="/dashboard/folders/<%= folder.id %>"
        >Cancel</a
      >
      <button class="ms-3 btn btn-danger" type="submit">Delete</button>
    </div>
  </form>
</div>

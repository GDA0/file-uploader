<% layout('layout') %>

<div>
  <form action="/dashboard/folders/<%= folder.id %>/update" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" value="<%= folder.name %>" />
    </div>
    <a class="btn btn-secondary" href="/dashboard/folders/<%= folder.id %>"
      >Cancel</a
    >
    <button class="btn btn-primary" type="submit">Update</button>
  </form>
</div>

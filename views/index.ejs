<% layout('layout') %>

<div class="d-flex flex-column align-items-center">
  <% if (user) { %>
  <h5 class="mt-3">
    Hello, <%= user.firstName %>! Visit your
    <a href="/dashboard">dashboard</a> to get started.
  </h5>
  <% } else { %>
  <h1>Welcome to File Uploader</h1>
  <p>
    A stripped-down version of
    <a
      href="https://www.google.com/drive/"
      target="_blank"
      rel="noopener noreferrer"
      >Google Drive</a
    >.
  </p>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/log-in">Log in</a></li>
    <li class="breadcrumb-item"><a href="/sign-up">Sign up</a></li>
  </ol>
  <% } %>
</div>
